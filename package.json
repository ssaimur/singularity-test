{
  "name": "singularity",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nodemon ./dist/src/index.js",
    "build": "tsoa spec-and-routes && tsc",
    "dev": "tsoa spec-and-routes && concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes && tsc\"",
    "test": "npm run jest",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint  --ext .ts src --fix",
    "swagger-gen": "tsoa swagger",
    "routes-gen": "tsoa routes",
    "prepare:after": "husky install && husky add .husky/pre-commit 'npx yarn lint'",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo:all": "sequelize db:migrate:undo:all",
    "migration:generate": "sequelize migration:create --name"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/stripe": "^8.0.417",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "concurrently": "^7.6.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^7.1.0",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.7.0",
    "jsonwebtoken": "^9.0.0",
    "mime": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemon": "^3.0.1",
    "pg": "^8.4.0",
    "pg-format": "^1.0.4",
    "pm2": "^5.3.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.30.0",
    "sequelize-typescript": "^2.1.5",
    "sequelize-typescript-migration-lts": "^3.2.5",
    "swagger-ui-express": "^4.6.1",
    "tsoa": "^5.1.1",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.10",
    "@types/pg-format": "^1.0.2",
    "@types/sequelize": "^4.28.14",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "morgan": "^1.10.0",
    "prettier": "^2.8.4",
    "sequelize-cli": "^6.6.0",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typescript": "5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  }
}
